<h2>Create a Post</h2>

<%= form_for @post do |f| %>
    <%= f.label "Title" %><br>
    <%= f.text_field :title %><br>

    <%= f.label "Content" %><br>
    <%= f.text_area :content %><br><br>

    <%= f.label "Choose from an already existing category:" %><br><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, :prompt => true, include_blank: true  %><br>
    <br>
    <%= f.label "or you can create a new category:" %><br><br>
    <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
        <%= categories_fields.label :name, "Category name" %><br>
        <%= categories_fields.text_field :name %>
        <% end %>
    <br><br>
    <%= f.submit %>
    <% end %>

